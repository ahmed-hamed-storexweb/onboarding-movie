{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./www",
    "src/Resolver/__extend__/.gitkeep",
    "src/search/.gitkeep"
  ],
  "exclude": ["**/__tests__/*", "node_modules", "./dist/*"]
}
